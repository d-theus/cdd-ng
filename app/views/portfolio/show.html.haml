- content_for :page_heading do
  %hgroup.row
    .col-xs-12.col-md-10.col-md-offset-1.text-center
      %h1 Portfolio

- content_for :title do
  Portfolio | Caffeine Driven Devel

- content_for :action do
  - if admin?
    %a.btn.btn-info.btn-fab#new_work_link{href: new_work_path, title: 'Contact'}
      %i.material-icons add
  - else
    %a.btn.btn-info.btn-fab#contact_link{href: new_contact_path, title: 'Contact'}
      %i.material-icons person

.works
  .col-xs-10.col-xs-offset-1
    - @works.in_groups_of(2) do |line|
      .row
        - if !line.compact! && line.size == 2
          .col-xs-12.col-sm-6.col-md-5.col-lg-4.col-lg-offset-2
            = render partial: 'work', locals: { work: line.first }
          .col-xs-12.col-sm-6.col-md-5.col-lg-4
            = render partial: 'work', locals: { work: line.last }
        - else
          .col-xs-12.col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.col-lg-4.col-lg-offset-4
            = render partial: 'work', locals: { work: line.first }

