= simple_form_for @work, class: 'form-horizontal' do |f|
  .row
    .col-xs-1.text-center
      %br/
      %br/
      %i.material-icons edit
    .col-xs-10
      = f.input :title
  .row
    .col-xs-1.text-center
      %br/
      %br/
      %i.material-icons link
    .col-xs-10
      = f.input :website_link
  .row
    .col-xs-1.text-center
      %br/
      %br/
      %strong GH
    .col-xs-10
      = f.input :github_link
  .row
    .col-xs-1.text-center
      %br/
      %br/
      %i.material-icons description
    .col-xs-10
      = f.input :description, as: :text
  .row
    .col-xs-1.text-center
      %br/
      %br/
      %i.material-icons photo
    .col-xs-10
      = f.input :image
  .row
    .col-xs-10.col-xs-offset-1
      = f.submit (action_name == 'new' ? 'ADD' : 'UPDATE'), class: 'btn btn-primary'
