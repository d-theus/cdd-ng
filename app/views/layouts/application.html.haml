!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0")
    %meta(name="theme-color" content="#3c3c3c")
    %meta(name="msapplication-navbutton-color" content="#3c3c3c")
    %meta(name="apple-mobile-web-app-status-bar-style" content="#3c3c3c")
    %meta{name: "robots", content: content_for?(:meta_robots) ? yield(:meta_robots) : 'index,follow' }
    %meta{name: "description", content: content_for?(:meta_description) ? yield(:meta_description) : 'Personal blog | sandbox | porfolio page' }
    %title= content_for?(:title) ? yield(:title) : 'Caffeine Driven Devel | Web development / Backend'
    = yield(:meta) if content_for? :meta
    = csrf_meta_tags
    = stylesheet_link_tag "application", :media => "all"
    = render partial: 'layouts/favicon'
    = render file: 'layouts/_ga'
    = javascript_include_tag "application"
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.2/html5shiv.min.js"


  %body
    = render partial: 'layouts/header'
    .container-fluid#content
      .row#page-heading
        = yield :page_heading
        - if content_for?(:action)
          #actions.text-center
            = yield :action 
      .row
        = yield
    = render partial: 'layouts/footer'
